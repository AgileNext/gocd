<div class="header-panel">
<header class="page-header no-buttons">
  <h1 id="page-title"><%= @view_title %></h1>
</header>
</div>

<ul class="sub-tab-navigation">
  <li class="current"><a>Notifications</a></li>
</ul>
<div class="sub-tab-content">

  <% unless go_config_service.isSmtpEnabled %>
    <div class="callout warning">
      SMTP settings are currently not configured. If you are the administrator, you can configure email support at <%= link_to "Mail Server Configuration", "/go/admin/config/server#!email-server" %>.
    </div>
  <% end %>

  <div id="validations"></div>

  <h2 class="my-notifications">My Notifications</h2>

  <div id="notification-prefs" class="notification-content"
       data-user-url="/go/api/current_user"
       data-filters-url="<%= spark_url_for({url_builder: controller}, SparkRoutes::NotificationFilterAPI::API_BASE) %>"
       data-pipelines="<%= @pipelines.to_json %>"
       data-smtp-configured="<%= go_config_service.isSmtpEnabled %>">
  </div>
</div>
