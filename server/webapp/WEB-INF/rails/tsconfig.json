{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "amd",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "m",
    "allowJs": true
  },
  "include": [
    "webpack/**/*.ts",
    "webpack/**/*.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "reportFiles": [
      "webpack/**/*.{ts,tsx}"
    ],
    "cacheDirectory": "tmp/awesome-ts-cache"
  }
}
